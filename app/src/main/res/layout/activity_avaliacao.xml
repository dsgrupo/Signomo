<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AvaliacaoActivity"
    android:background="@drawable/ic_bghoroscopo">

    <RelativeLayout
        android:id="@+id/mapTopBar"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/btnColor">

        <RelativeLayout
            android:id="@+id/mapNavigationbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/mapImgBtnBack"
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="50dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_undo_variant"
                android:tint="@color/menuTextColor" />

            <TextView
                android:id="@+id/mapTitleApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="@string/uppCaseAppname"
                android:textColor="@color/menuTextColor"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mapNavigationbar"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/mapProfilepic"
                android:layout_width="93dp"
                android:layout_height="96dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/img_shape"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_harris" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mapProfilepic"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mapProfilename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/nomeGenerico"
                    android:textColor="@color/menuTextColor"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mapSignoData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/signoDataGenericos"
                    android:textColor="@color/menuTextColor"
                    android:textSize="20sp" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/mapTopBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="446dp"
                    android:id="@+id/listView"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <Button
                    android:id="@+id/botaoinserir"
                    android:layout_width="240dp"
                    android:layout_height="46dp"
                    android:layout_alignEnd="@+id/editText3"
                    android:layout_alignRight="@+id/editText3"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="139dp"
                    android:layout_marginLeft="300dp"
                    android:layout_marginTop="400dp"
                    android:text="Inserir Avaliação"
                    android:backgroundTint="@color/menuTextColor"
                    android:textColor="@color/pureWhite"
                    android:background="@drawable/button_round"/>

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>