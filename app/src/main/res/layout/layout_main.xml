<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:background="@color/solidMenuColor">
    <RelativeLayout
        android:id="@+id/navigationbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:layout_marginEnd="50dp"
            android:id="@+id/imgBtnBack"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_undo_variant"
            android:background="@android:color/transparent"
            android:tint="@color/menuTextColor"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/titleApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGNOMO"
            android:textColor="@color/menuTextColor"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/navigationbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"

            android:id="@+id/profilepic"
            android:layout_width="123dp"
            android:layout_height="126dp"
            android:src="@drawable/ic_harris"
            android:scaleType="centerCrop"
            android:background="@drawable/img_shape"/>
        <LinearLayout
            android:layout_toRightOf="@+id/profilepic"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/profilename"
                android:textColor="@color/menuTextColor"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harris McDaniels"/>
            <TextView
                android:textColor="@color/menuTextColor"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aquariano, 21"/>
        </LinearLayout>
    </RelativeLayout>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:background="@drawable/ic_imgbg"
        android:backgroundTintMode="src_atop"
        android:backgroundTint="#8094278E"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="251dp"
                android:layout_height="67dp"
                android:background="@drawable/btnmenu_shape">

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/whitecircle_shape"></LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meu Horóscopo"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/menuTextColor"
                    android:layout_gravity="center"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemMenu1"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="251dp"
                android:layout_height="67dp"
                android:background="@drawable/btnmenu_shape">

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/whitecircle_shape"></LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meu Horóscopo"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/menuTextColor"
                    android:layout_gravity="center"
                    android:textSize="20sp"/>

            </LinearLayout>

            <!--ITEM MENU 2-->

            <LinearLayout
                android:id="@+id/itemMenu2"
                android:layout_below="@+id/itemMenu1"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="251dp"
                android:layout_height="67dp"
                android:background="@drawable/btnmenu_shape">

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/whitecircle_shape"></LinearLayout>

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Outros horóscopos"
                    android:textAlignment="center"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/menuTextColor"
                    android:layout_gravity="center"
                    android:textSize="20sp"/>

            </LinearLayout>

            <!--ITEM MENU 3-->

            <LinearLayout
                android:id="@+id/itemMenu3"
                android:layout_below="@+id/itemMenu2"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="251dp"
                android:layout_height="67dp"
                android:background="@drawable/btnmenu_shape">

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/whitecircle_shape"></LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meu mapa astral"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/menuTextColor"
                    android:layout_gravity="center"
                    android:textSize="20sp"/>

            </LinearLayout>

            <!--ITEM MENU 4-->

            <LinearLayout
                android:id="@+id/itemMenu4"
                android:layout_below="@+id/itemMenu3"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="251dp"
                android:layout_height="67dp"
                android:background="@drawable/btnmenu_shape">

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/whitecircle_shape"></LinearLayout>

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Definições dos signos"
                    android:textAlignment="center"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/menuTextColor"
                    android:layout_gravity="center"
                    android:textSize="20sp"/>

            </LinearLayout>

            <!--ITEM MENU 5-->

            <LinearLayout
                android:id="@+id/itemMenu5"
                android:layout_below="@+id/itemMenu4"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="251dp"
                android:layout_height="67dp"
                android:background="@drawable/btnmenu_shape">

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/whitecircle_shape"></LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ascendência"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/menuTextColor"
                    android:layout_gravity="center"
                    android:textSize="20sp"/>

            </LinearLayout>

            <!--ITEM MENU 6-->

            <LinearLayout
                android:id="@+id/itemMenu6"
                android:layout_below="@+id/itemMenu5"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="251dp"
                android:layout_height="67dp"
                android:background="@drawable/btnmenu_shape">

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/whitecircle_shape"></LinearLayout>

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Minhas configurações"
                    android:textAlignment="center"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/menuTextColor"
                    android:layout_gravity="center"
                    android:textSize="20sp"/>

            </LinearLayout>





        </RelativeLayout>
    </ScrollView>

</RelativeLayout>