<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dialogTopColor">
    <RelativeLayout
        android:id="@+id/divInfos"
        android:layout_width="match_parent"
        android:layout_height="179dp"></RelativeLayout>
    <ImageButton
        android:id="@+id/dialogCloseBtn"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_24dp"
        android:background="@android:color/transparent"/>
    <TextView
        android:id="@+id/dialogUserName"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harris McDaniels"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/menuTextColor"/>
    <TextView
        android:layout_below="@+id/dialogUserName"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aquarian, 07/02/1998"
        android:textSize="24sp"
        android:textColor="@color/menuTextColor"/>
    <RelativeLayout
        android:layout_below="@+id/divInfos"
        android:layout_width="match_parent"
        android:layout_height="344dp"
        android:background="@color/dialogBottomColor">

        <ImageView
            android:id="@+id/dialogIcon"
            android:layout_width="137dp"
            android:layout_height="137dp"
            android:src="@drawable/ic_scorpio"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_below="@+id/dialogIcon"
            android:layout_centerHorizontal="true"
            android:text="Ascendência em Câncer!"
            android:textSize="32sp"
            android:textColor="@color/menuTextColor"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_width="230dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>